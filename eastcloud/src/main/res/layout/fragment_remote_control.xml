<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context="com.orientalfinance.eastcloud.fragment.FragmentRemoteControl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_input"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/controller_rect1"
                android:gravity="center"
                android:padding="4dp"
                android:text="文字输入"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/controller_rect1"
                android:gravity="center"
                android:padding="4dp"
                android:text="电视支付"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#00000000"
            android:gravity="center">

            <FrameLayout
                android:layout_width="240dp"
                android:layout_height="240dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/controller_1" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="240dp"
                android:layout_height="240dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/controller_2" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="#00000000" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="240dp"
                android:layout_height="240dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/controller_3" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="240dp"
                android:layout_height="240dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/controller_4" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="10dp"
                    android:background="#00000000" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="240dp"
                android:layout_height="240dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/copntroller_5" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="#00000000" />
            </FrameLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/controller_oval2"
                android:gravity="center"
                android:text="声+"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/controller_oval2"
                android:gravity="center"
                android:text="声-"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/text_menu_home"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignBaseline="@+id/text_menu_return"
                android:background="@drawable/controller_oval2"
                android:gravity="center"
                android:text="声+"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/text_menu_return"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="@drawable/controller_rect_2"
                android:gravity="center"
                android:text="返回"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignBaseline="@+id/text_menu_return"
                android:layout_alignParentRight="true"
                android:background="@drawable/controller_oval2"
                android:gravity="center"
                android:text="声-"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
