<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.orientalfinance.eastcloud.activity.ActivitySettingPassword">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ffffff"
            >

            <TextView
                android:id="@+id/tv_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/tv_Toolbar"

                android:text="设置密码"/>
        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:text="设置你的密码"
            android:textColor="#000000"/>

        <com.orientalfinance.eastcloud.mvp.View.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cet_Pwd"
            android:layout_margin="12dp"
            android:gravity="center"
            android:hint="6-20位字母,数字组合"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:text="确认你的密码"
            android:textColor="#000000"/>

        <com.orientalfinance.eastcloud.mvp.View.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:id="@+id/cet_Pwd_Confirm"

            android:hint="6-20位字母,数字组合"/>

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/yellowrectangle"
            android:text="注册"
            android:textSize="20sp"/>
    </LinearLayout>
</layout>
