<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.orientalfinance.eastcloud.activity.ActivityConnectTV">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ffffff"
            >

            <TextView
                android:id="@+id/tv_toolbar"
                style="@style/tv_Toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未连接"/>
        </android.support.v7.widget.Toolbar>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/iv_ScanCode"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/moyu"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="扫一扫\n添加机顶盒"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/warn"
            android:drawablePadding="12dp"
            android:text="温馨提示"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/point"
            android:drawablePadding="12dp"
            android:text="当前只支持东方有线设备"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/point"
            android:drawablePadding="12dp"
            android:text="请确保设备与手机在同意局域网下"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/point"
            android:drawablePadding="12dp"
            android:text="请尝试使用扫一扫添加机顶盒"/>
    </LinearLayout>
</layout>
