<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="channel"
            type="com.orientalfinance.eastcloud.module.javabean.Channel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <ImageView
                android:id="@+id/iv_moviebg"
                android:layout_width="100dp"
                android:layout_height="74dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                app:imageUrl="@{channel.currentProgramBg}"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_title"
                android:background="@drawable/bg_movieproperty"
                android:text="综艺"/>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="@{channel.channelName}"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@{channel.currentProgram}"
                android:textSize="12sp"/>
        </RelativeLayout>

<View
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:text="@{channel.programTime}"/>


    </LinearLayout>
</layout>