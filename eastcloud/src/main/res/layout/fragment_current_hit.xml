<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="utils"
            type="com.orientalfinance.eastcloud.utils.MyDataBindingUtils"/>


    </data>

    <!--<android.support.v4.widget.SwipeRefreshLayout-->
    <!--android:id="@+id/scrollview"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.orientalfinance.eastcloud.fragment.FragmentCurrentHit">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/oval"
                    android:hint="欢乐颂第二季"
                    android:inputType="text"
                    android:onClick="@{utils.onSearchClick}"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/oval"
                    android:onClick="@{utils.onClick}"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="预约"
                    android:textSize="14sp"/>
            </LinearLayout>

            <com.youth.banner.Banner
                android:id="@+id/banner"

                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <TextView
                style="@style/Indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/hot"
                android:drawablePadding="12dp"
                android:text="正在热播"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ry_CurrentHit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="460dp"
                android:nestedScrollingEnabled="false"
                >
            </android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#30000000">
            </View>

            <TextView
                style="@style/Indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/video"
                android:drawablePadding="12dp"
                android:text="频道直播"

                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/tegonghuangfei"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="130dp"
                    android:text="点击次：7888"
                    android:textColor="#ffffff"
                    android:textSize="12sp"/>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:text="特工皇妃"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:text="已播出13:30:10"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_LiveVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:nestedScrollingEnabled="false">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
    <!--</android.support.v4.widget.SwipeRefreshLayout>-->
</layout>
