<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="小叮当" />

        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="13818832455"
            android:textColor="#EDECEA" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="上海上海市杨浦区五角场街道武东路198号财大科技园12层" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_setting_address"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:background="@drawable/setting_address_selected" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_setting_address"
            android:gravity="center_vertical"
            android:text="默认地址"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_delete_address"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:background="@drawable/delete_address" />

        <ImageView
            android:id="@+id/iv_edit_address"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@id/iv_delete_address"
            android:background="@drawable/edit_add" />

    </RelativeLayout>
</LinearLayout>