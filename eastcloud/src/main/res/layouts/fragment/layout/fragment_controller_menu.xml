<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlyout_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/iv_voice_plus"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:background="@drawable/tv_voice_plus2" />

        <RelativeLayout
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="bottom">

            <ImageView
                android:id="@+id/iv_exit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tv_exit_2" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="bottom">

            <ImageView
                android:id="@+id/iv_voice_minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tv_voice_minus_2" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="128dp"
            android:layout_height="128dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="bottom">

            <ImageView
                android:id="@+id/iv_retur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tv_return_2" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/flyout_center"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:background="@drawable/controller_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">


                <ImageView
                    android:id="@+id/iv_left_top"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:background="@drawable/remote_menu_top" />

                <ImageView
                    android:id="@+id/iv_right_top"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_toRightOf="@+id/iv_left_top"
                    android:background="@drawable/remote_menu_right_bg" />

                <ImageView
                    android:id="@+id/iv_below_left"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_below="@+id/iv_left_top"
                    android:layout_gravity="center"
                    android:background="@drawable/remote_menu_left_bg" />

                <ImageView
                    android:id="@+id/iv_below_right"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_below="@+id/iv_right_top"
                    android:layout_toRightOf="@+id/iv_below_left"
                    android:background="@drawable/remote_menu_bottom" />

                <ImageView
                    android:id="@+id/iv_center"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/remote_menu_ok"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/tv_center_ok"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="OK"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </RelativeLayout>

        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>